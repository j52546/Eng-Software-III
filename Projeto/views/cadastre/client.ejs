<% include ../partials/header %>
<% include ../partials/navBar %>
      <div class="content-wrapper">
<% include ../partials/modalAcceptAccount %>
         <!-- /.container-fluid-->
        <!-- /.content-wrapper-->
        <h1 style="text-align:center">Cadastro de Cliente</h1>

        <div style="margin:10px;">
        <form id="form_client" method="POST" action="/create/account">
        <div class="form-group row">
        <label for="example-text-input" class="col-2 col-form-label">Nome</label>
        <div class="col-10">
          <input class="form-control" maxlength="40" type="text" placeholder="Informe nome" id="nome">
        </div>
      </div>
      <div class="form-group row">
        <label for="example-search-input" class="col-2 col-form-label">Pessoa</label>
        <div class="col-10">
            <div class="form-check">
                  <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="pessoa" id="pessoa_fisica" value="option1" checked>
                              Físico
                        </label>
                        </div>
                        <div class="form-check">
                        <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="pessoa" id="pessoa_juridica" value="option2">
                              Jurídico
                  </label>
            </div>
        </div>
      </div>
            <div class="form-group row">
                  <label for="example-email-input" class="col-2 col-form-label">Documento</label>
                  <div class="col-10">
                  <input class="form-control" maxlength="20" placeholder="documento" type="text" name="doc" id="doc">
            </div>
      </div>
      <div class="form-group row">
        <label for="example-email-input" class="col-2 col-form-label">Email</label>
        <div class="col-10">
          <input class="form-control" maxlength="40" placeholder="informe email" type="email" name="email" id="email">
        </div>
      </div>
      <div class="form-group row">
        <label for="example-tel-input" class="col-2 col-form-label">Telephone</label>
        <div class="col-10">
          <input class="form-control" maxlength="16" type="tel" name="telefone" placeholder="informe telefone" id="telefone">
        </div>
      </div>
       <div class="form-group row">
        <label for="example-color-input" class="col-2 col-form-label">Endereço</label>
        <div class="col-10">
          <textarea rows="3"  class="form-control" name="endereco" type="text" placeholder="informe endereço" id="endereco"></textarea>
        </div>
      </div>

        <div class="form-group row">
            <label for="example-color-input" class="col-2 col-form-label">Cidade</label>
            <div class="col-10">
            <input maxlength="40"  class="form-control" type="text" name="cidade" placeholder="informe cidade" id="cidade">
            </div>
       </div>
       <div class="form-group row">
            <label for="example-color-input" class="col-2 col-form-label">Estado</label>
            <div class="col-10">
                  <input maxlength="40"  class="form-control" type="text" name="estado" placeholder="informe estado" id="estado">
            </div>
       </div>
       <div class="form-group row">
       <label for="example-color-input" class="col-2 col-form-label">CEP</label>
       <div class="col-10">
             <input maxlength="15"  class="form-control" type="text" name="cep" placeholder="informe cep" id="cep">
       </div>
      </div>
       <div style="width:100%; display:flex; justify-content:center">
            <button form="form_client" class="btn btn-primary">Salvar</button>
       </div>
       </form>
       </div>
      </div>

<% include ../partials/footerBar %>
<% include ../partials/footer %>